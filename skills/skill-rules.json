{
  "version": "1.0",
  "description": "NestJS skill triggers - consolidated structure",
  "skills": {
    "backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "../agents/backend-developer.md",
      "promptTriggers": {
        "keywords": ["backend", "nestjs", "api", "service", "controller", "entity", "dto", "module", "guard", "interceptor", "pipe", "decorator", "repository", "typeorm"],
        "intentPatterns": [
          "(create|implement|build|add|update|fix).*?(api|endpoint|route|service|controller|module)",
          "(database|query|entity|migration|seed|repository)",
          "(swagger|openapi|documentation).*?(api|endpoint)"
        ]
      }
    },
    "debugging": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "debugging/fix-bug.md",
      "promptTriggers": {
        "keywords": ["fix bug", "debug", "nestjs error", "typescript error", "500 error", "400 error", "typeorm error", "injection error", "troubleshoot", "bug fix"],
        "intentPatterns": [
          "(fix|debug|solve|resolve).*?bug",
          "(nestjs|typescript|typeorm).*?error",
          "troubleshoot.*?(issue|problem|error)"
        ]
      }
    },
    "organize-types": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "code-quality/organize-types.md",
      "promptTriggers": {
        "keywords": ["organize types", "typescript types", "type organization", "dto types", "entity types", "barrel exports", "refactor types", "type structure"],
        "intentPatterns": [
          "(organize|clean|refactor|centralize).*?types",
          "type.*?(organization|structure|cleanup)",
          "(dto|entity).*?types"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/dto/**/*.ts",
          "**/entities/**/*.ts",
          "**/types/**/*.ts"
        ]
      }
    },
    "e2e-testing": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "e2e-testing/SKILL.md",
      "promptTriggers": {
        "keywords": [
          "e2e test",
          "e2e-test",
          "end-to-end test",
          "generate test",
          "create test",
          "write test",
          "test generator",
          "integration test",
          "test controller",
          "test endpoint",
          "test api",
          "jest fixtures",
          "test fixtures",
          "test data",
          "test factory",
          "test setup",
          "supertest",
          "api testing",
          "http test",
          "endpoint testing"
        ],
        "intentPatterns": [
          "(generate|create|write|add).*?(e2e|end-to-end|test|spec)",
          "(test|testing).*?(controller|endpoint|route|api|module)",
          "(finish|complete|done|implement).*?(controller|endpoint|api)",
          "(create|add|write).*?(jest|test).*?fixture",
          "fixture.*?(pattern|setup|factory)",
          "(api|http|endpoint).*?test"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "backend/test/**/*.ts",
          "backend/test/e2e/**/*.ts",
          "**/test/**/*.e2e-spec.ts",
          "**/test/fixtures/**/*.ts",
          "**/test/setup/**/*.ts"
        ]
      }
    },
    "api-development": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "api-development/SKILL.md",
      "promptTriggers": {
        "keywords": [
          "api development",
          "develop api",
          "create api",
          "implement api",
          "build endpoint",
          "create endpoint",
          "backend api",
          "nestjs api",
          "controller service",
          "create controller",
          "create service",
          "typeorm entity",
          "prd to api",
          "new feature backend"
        ],
        "intentPatterns": [
          "(develop|create|implement|build).*?(api|endpoint|route|controller)",
          "(create|add|implement).*?(service|repository|entity)",
          "prd.*?(implementation|api|backend)",
          "(nestjs|typeorm).*?(api|endpoint|controller)"
        ]
      }
    }
  },
  "guides": {
    "_note": "Reference documents in ../guides/",
    "architecture-overview": "../guides/architecture-overview.md",
    "async-and-errors": "../guides/async-and-errors.md",
    "best-practices": "../guides/best-practices.md",
    "database-patterns": "../guides/database-patterns.md",
    "testing-guide": "../guides/testing-guide.md",
    "validation-patterns": "../guides/validation-patterns.md",
    "middleware-guide": "../guides/middleware-guide.md",
    "services-and-repositories": "../guides/services-and-repositories.md"
  }
}
