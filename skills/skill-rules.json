{
  "version": "1.0",
  "description": "NestJS skill triggers",
  "skills": {
    "backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "file": "../agents/backend-developer.md",
      "promptTriggers": {
        "keywords": ["backend", "nestjs", "api", "service", "controller", "entity", "dto", "module", "guard", "interceptor", "pipe", "decorator", "repository", "typeorm"],
        "intentPatterns": [
          "(create|implement|build|add|update|fix).*?(api|endpoint|route|service|controller|module)",
          "(database|query|entity|migration|seed|repository)",
          "(swagger|openapi|documentation).*?(api|endpoint)"
        ]
      }
    },
    "debugging": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "debugging/fix-bug.md",
      "promptTriggers": {
        "keywords": ["fix bug", "debug", "nestjs error", "typescript error", "500 error", "400 error", "typeorm error", "injection error"],
        "intentPatterns": [
          "(fix|debug|solve|resolve).*?bug",
          "(nestjs|typescript|typeorm).*?error",
          "troubleshoot.*?(issue|problem|error)"
        ]
      }
    },
    "code-quality": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "code-quality/organize-types.md",
      "promptTriggers": {
        "keywords": ["organize types", "typescript types", "type organization", "dto types", "entity types", ".d.ts", "barrel exports"],
        "intentPatterns": [
          "(organize|clean|refactor|centralize).*?types",
          "type.*?(organization|structure|cleanup)",
          "(dto|entity).*?types"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/dto/**/*.ts",
          "**/entities/**/*.ts",
          "**/types/**/*.ts"
        ]
      }
    },
    "jest-fixtures": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "e2e-testing/jest-fixtures.md",
      "promptTriggers": {
        "keywords": ["jest fixtures", "test fixtures", "nestjs fixtures", "test data", "test factory", "test setup"],
        "intentPatterns": [
          "(create|add|write).*?(jest|test).*?fixture",
          "fixture.*?(pattern|setup|factory)",
          "(test|testing).*?(module|setup|fixture)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/test/fixtures/**/*.ts",
          "**/test/setup/**/*.ts"
        ]
      }
    },
    "supertest-patterns": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "file": "e2e-testing/supertest-patterns.md",
      "promptTriggers": {
        "keywords": ["supertest", "api testing", "e2e api", "http test", "endpoint testing", "e2e-spec"],
        "intentPatterns": [
          "(create|add|write).*?supertest",
          "(api|http|endpoint).*?test",
          "(create|add|write).*?e2e.*?test"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/test/**/*.e2e-spec.ts",
          "**/test/e2e/**/*.ts"
        ]
      }
    }
  },
  "guides": {
    "_note": "Reference documents in ../guides/",
    "architecture-overview": "../guides/architecture-overview.md",
    "async-and-errors": "../guides/async-and-errors.md",
    "best-practices": "../guides/best-practices.md",
    "database-patterns": "../guides/database-patterns.md",
    "testing-guide": "../guides/testing-guide.md",
    "validation-patterns": "../guides/validation-patterns.md",
    "middleware-guide": "../guides/middleware-guide.md",
    "services-and-repositories": "../guides/services-and-repositories.md"
  }
}
